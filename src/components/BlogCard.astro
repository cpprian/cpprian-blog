---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, pubDate, tags, heroImage } = post.data;
---

<article class="blog-card">
  <a href={`/blog/${post.id}`} class="card-link">
    {heroImage && (
      <div class="card-image">
        <Image 
          src={heroImage} 
          alt={title}
          width={400}
          height={250}
          format="webp"
          quality={80}
        />
      </div>
    )}
    <div class="card-content">
      <h2>{title}</h2>
      <time datetime={pubDate.toISOString()}>
        {pubDate.toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'short', 
          day: 'numeric' 
        })}
      </time>
      <p>{description}</p>
      {tags && tags.length > 0 && (
        <div class="tags">
          {tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </div>
  </a>
</article>

<style>
  .blog-card {
    background: linear-gradient(135deg, #1a1614 0%, #0f0f0f 100%);
    border: 2px solid #2a2520;
    border-radius: 0;
    overflow: hidden;
    transition: all 0.3s;
    box-shadow: 
      0 4px 8px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
    position: relative;
  }

  .blog-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, 
      transparent 0%, 
      #8b6f47 50%, 
      transparent 100%);
    opacity: 0;
    transition: opacity 0.3s;
  }

  .blog-card:hover::before {
    opacity: 0.6;
  }

  .blog-card:hover {
    transform: translateY(-6px);
    border-color: #3a2f28;
    box-shadow: 
      0 8px 16px rgba(0, 0, 0, 0.5),
      0 0 20px rgba(139, 111, 71, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .card-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    position: relative;
  }

  .card-image::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, 
      transparent 0%, 
      rgba(26, 22, 20, 0.8) 100%);
    pointer-events: none;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s;
    filter: sepia(0.3) contrast(1.1);
  }

  .blog-card:hover .card-image img {
    transform: scale(1.08);
  }

  .card-content {
    padding: 1.5em;
    border-top: 1px solid #2a2520;
  }

  .card-content h2 {
    margin: 0 0 0.5em;
    font-size: 1.4em;
    font-weight: 400;
    color: #d4af37;
    font-family: Georgia, serif;
    text-shadow: 0 0 10px rgba(212, 175, 55, 0.2);
  }

  .card-content time {
    display: block;
    font-size: 0.8em;
    color: #8b6f47;
    margin-bottom: 0.8em;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 500;
  }

  .card-content p {
    margin: 0 0 1em;
    color: #b8a27a;
    line-height: 1.7;
    font-size: 0.95em;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5em;
    margin-top: 1em;
    padding-top: 1em;
    border-top: 1px solid #2a2520;
  }

  .tag {
    padding: 0.3em 0.8em;
    background: linear-gradient(180deg, #2a2520 0%, #1a1614 100%);
    border: 1px solid #3a2f28;
    border-radius: 0;
    font-size: 0.75em;
    color: #8b6f47;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.05);
  }

  .tag:hover {
    border-color: #8b6f47;
    color: #c4a574;
  }
</style>
